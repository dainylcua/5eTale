<%- include('../partials/head.ejs') %>
<%- include('../partials/nav.ejs') %>

<div class="container side-hero">
    <section class="hero is-small">
        <div class="hero-body">
            <p class="title is-size-1">
                Sign Up
            </p>
            <p class="subtitle">
                Sign up to start creating and tracking items! <p style="color:red">DO NOT USE CREDENTIALS YOU WOULD NORMALLY USE</p>
            </p>
        </div>
    </section>
</div>

<div class="container">
    <div class="columns">
        <div class="column is-6">
            <div class="box">
                <form action="/users" method="POST" autocomplete="off">
                    <div class="field">
                        <label class="label" for="email">Email:</label>
                        <input class="input" type="email" name="email" id="email" />
                    </div>
                
                    <div class="field">
                        <label class="label" for="username">Username:</label>
                        <input class="input" type="username" name="username" id="username" />
                    </div>
                
                    <div class="field">
                        <label class="label" for="password">Password:</label>
                        <input class="input" type="password" name="password" id="password" />
                    </div>
                
                    <input class="button" type="submit" value="Register" />
                </form>
            </div>
        </div>
    </div>
</div>

